<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="btn">
        <item name="android:background">@drawable/oval_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/txt_x_large</item>
    </style>

    <style name="transperant_btn">
        <item name="android:background">@drawable/oval_transperantbg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/txt_x_large</item>
    </style>

    <style name="transperant_edittext">
        <item name="android:background">@drawable/oval_edittransperantblue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/txt_x_large</item>
    </style>

    <style name="darkblue_btn">
        <item name="android:background">@drawable/darkblue_transperant</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/txt_x_large</item>
    </style>

    <style name="grey_edittext">
        <item name="android:background">@drawable/grey_transperantbtn</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/txt_x_large</item>
    </style>

    <style name="dark_btn">
        <item name="android:background">@drawable/oval_darkbluebg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/txt_x_large</item>
    </style>
    <style name="txt_red">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/small_padding</item>
    </style>
    <style name="txt_normal_red" parent="txt_red">
        <item name="android:textSize">@dimen/txt_normal</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
