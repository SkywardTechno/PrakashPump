<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="12"
            android:orientation="vertical"
            android:layout_below="@+id/toolbar"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="10"
                android:layout_weight="0.8"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Product Type :"
                    android:textColor="@color/black"
                    android:textSize="24dp"
                    android:gravity="left|center_vertical"

                    />
                <!-- <ImageView
                     android:layout_gravity="center_vertical"
                     android:layout_width="10dp"
                     android:layout_height="match_parent"
                     android:src="@drawable/asterisk_symbol"/>
 -->


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="10"
                android:layout_weight="0.8"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>


                <Spinner
                    android:id="@+id/spin_pumpselection_producttype"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8.8"
                    android:hint="Product Type"
                    android:editable="false"
                    android:textSize="24dp"
                    android:background="@drawable/grey_edittext_line"
                    android:gravity="left|center_vertical"/>

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    android:src="@drawable/dropdown"/>



                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="10"
                android:layout_weight="0.8"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:text="Inlet/Outlet :"
                    android:textColor="@color/black"
                    android:textSize="24dp"

                    android:gravity="left|center_vertical"

                    />
                <!--  <ImageView
                      android:layout_gravity="center_vertical"
                      android:layout_width="10dp"
                      android:layout_height="match_parent"
                      android:src="@drawable/asterisk_symbol"/>
  -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="10"
                android:layout_weight="0.8"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>

                <Spinner
                    android:id="@+id/spin_pumpselection_inlet"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.3"
                    android:hint="Inlet"
                    android:singleLine="true"
                    android:background="@drawable/grey_edittext_line"

                    android:textSize="24dp"

                    android:gravity="center_vertical"/>

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    android:src="@drawable/dropdown"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"/>

                <Spinner
                    android:id="@+id/spin_pumpselection_outlet"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.3"
                    android:hint="Outlet"
                    android:singleLine="true"
                    android:background="@drawable/grey_edittext_line"

                    android:textSize="24dp"

                    android:gravity="center_vertical"/>

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    android:src="@drawable/dropdown"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="10"
                android:layout_weight="0.8"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:text="Power :"
                    android:textColor="@color/black"
                    android:textSize="24dp"

                    android:gravity="left|center_vertical"

                    />
                <!-- <ImageView
                     android:layout_gravity="center_vertical"
                     android:layout_width="10dp"
                     android:layout_height="match_parent"
                     android:src="@drawable/asterisk_symbol"/>
 -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="10"
                android:layout_weight="0.8"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>

                <EditText
                    android:id="@+id/spin_pumpselection_powerhp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:hint="Power HP"
                    android:singleLine="true"
                    android:inputType="numberDecimal"
                    android:textSize="24dp"
                    android:gravity="center_vertical"/>


                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>

                <EditText
                    android:id="@+id/spin_pumpselection_power"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:hint="Power KW"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textSize="24dp"
                    android:gravity="center_vertical"/>


                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="10"
                android:layout_weight="0.8"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:text="Type :"
                    android:textColor="@color/black"
                    android:textSize="24dp"

                    android:gravity="left|center_vertical"
                    />
                <!-- <ImageView
                     android:layout_width="10dp"
                     android:layout_height="match_parent"
                     android:src="@drawable/asterisk_symbol"/>
 -->

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="10"
                android:layout_weight="0.8"
                android:orientation="horizontal">




                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
                <Spinner

                    android:id="@+id/spin_pumpselection_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8.8"
                    android:hint="Type"
                    android:editable="false"
                    android:textSize="24dp"
                    android:background="@drawable/grey_edittext_line"

                    android:drawableRight="@drawable/dropdown"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    android:src="@drawable/dropdown"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="10"
                android:layout_weight="0.8"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:text="Head :"
                    android:textColor="@color/black"
                    android:textSize="24dp"

                    android:gravity="left|center_vertical"
                    />
                <!--  <ImageView
                      android:layout_gravity="center_vertical"
                      android:layout_width="10dp"
                      android:layout_height="match_parent"
                      android:src="@drawable/asterisk_symbol"/>-->

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="10"
                android:layout_weight="0.8"
                android:orientation="horizontal">



                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
                <EditText
                    android:id="@+id/spin_pumpselection_headfeet"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:hint="Head Feet"
                    android:textSize="24dp"
                    android:inputType="numberDecimal"
                    android:paddingRight="5dp"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
                <EditText
                    android:id="@+id/spin_pumpselection_head"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:hint="Head Meter"
                    android:textSize="24dp"
                    android:inputType="numberDecimal"
                    android:paddingRight="5dp"
                    android:gravity="center_vertical"/>


                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="10"
                android:layout_weight="0.8"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:text="Flow rate :"
                    android:textColor="@color/black"
                    android:textSize="24dp"

                    android:gravity="left|center_vertical"
                    />
                <!-- <ImageView
                     android:layout_gravity="center_vertical"
                     android:layout_width="10dp"
                     android:layout_height="match_parent"
                     android:src="@drawable/asterisk_symbol"/>-->

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="10"
                android:layout_weight="0.8"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>


                <Spinner

                    android:id="@+id/spin_pumpselection_flowrate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8.8"
                    android:hint="Flow Rate"
                    android:textSize="24dp"
                    android:editable="false"
                    android:paddingRight="5dp"
                    android:background="@drawable/grey_edittext_line"

                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/dropdown"
                    />
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    android:src="@drawable/dropdown"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="10"
                android:layout_weight="0.8"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:text="Volt :"
                    android:textColor="@color/black"
                    android:textSize="24dp"

                    android:gravity="left|center_vertical"
                    />
                <!-- <ImageView
                     android:layout_gravity="center_vertical"
                     android:layout_width="10dp"
                     android:layout_height="match_parent"
                     android:src="@drawable/asterisk_symbol"/>-->

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="10"
                android:layout_weight="0.8"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>


                <Spinner

                    android:id="@+id/spin_pumpselection_volt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8.8"
                    android:hint="Volt"
                    android:textSize="24dp"
                    android:editable="false"
                    android:paddingRight="5dp"
                    android:background="@drawable/grey_edittext_line"

                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/dropdown"
                    />
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    android:src="@drawable/dropdown"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="10"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5.6"
                    android:textColor="@color/black"
                    android:textSize="24dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Require technical services?"/>

                <RadioGroup
                    android:id="@+id/pumpselection_yesno"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.7"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <RadioButton
                        android:id="@+id/pumpselection_yes"
                        android:textSize="24dp"
                        android:layout_width="0dp"
                        android:layout_weight="2.5"
                        android:layout_height="wrap_content"
                        android:text="Yes"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"/>
                    <RadioButton
                        android:id="@+id/pumpselection_no"
                        android:textSize="24dp"
                        android:layout_width="0dp"
                        android:layout_weight="2.4"
                        android:layout_height="wrap_content"
                        android:text="No"

                        />
                </RadioGroup>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"/>
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="6"
                android:layout_weight="0.8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
                <Button
                    android:id="@+id/btn_pumpselection_go"
                    style="@style/dark_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:text="Go"
                    android:textSize="24dp"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"/>



        </LinearLayout>

    </ScrollView>
</LinearLayout>
