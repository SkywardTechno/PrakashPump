                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:weightSum="5.5"
                        android:orientation="horizontal"
                        android:background="@drawable/grey_transperantbtn">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:text="Shipping To :"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:textColor="@color/dark_grey"
                            android:paddingLeft="10dp"
                            />



                        <TextView
                            android:id="@+id/txt_os_shippingname"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:text="Shipping Name"
                            android:paddingLeft="10dp"
                            android:textSize="14dp"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            />

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:text="Shipping Address"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        />
                    <TextView
                        android:id="@+id/txt_eos_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Address "
                        android:gravity="left|center_vertical"
                        android:padding="10dp"
                        android:text=""
                        android:background="@drawable/grey_transperantbtn"
                        android:textSize="14dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:text="Select a Payment Method"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:paddingLeft="10dp"
                        android:gravity="center_vertical"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:background="@drawable/grey_transperantbtn"
                        android:orientation="vertical"
                        android:weightSum="5">

                        <RadioGroup
                            android:id="@+id/payment_rg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:weightSum="5"
                            android:padding="5dp"
                            >
                            <RadioButton
                                android:enabled="false"
                                android:id="@+id/payment_cc"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2.5"
                                android:text="Credit Card/ Debit Card"
                                android:textColor="@color/Blue"
                                android:textSize="14dp"
                                android:paddingLeft="10dp"/>

                            <ImageView
                                android:layout_width="match_parent"
                                android:background="@color/grey"
                                android:layout_height="1dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                />

                            <RadioButton
                                android:id="@+id/payment_dc"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2.5"
                                android:text="Cash On Delivery"
                                android:textColor="@color/green"
                                android:textSize="14dp"
                                android:checked="true"
                                android:paddingLeft="10dp"/>


                        </RadioGroup>


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        />


                    <ImageView
                        android:layout_width="match_parent"
                        android:background="@color/grey"
                        android:layout_height="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        />

                    <Button
                        android:id="@+id/btn_os_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/blue_squarebtn_bg"
                        android:textSize="14dp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textAllCaps="false"
                        android:text="Proceed To Payment"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>
