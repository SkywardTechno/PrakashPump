<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context="skyward.pp.ecommerce.Ecomm_MyCart">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        />

    <ScrollView

        android:layout_width="fill_parent"
        android:fillViewport="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9.8"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9.4"
                android:orientation="vertical"
                android:weightSum="11.4"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    />

                <ListView
                    android:id="@+id/listordersummaryproceed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/light_grey"
                    android:dividerHeight="2dp"
                    android:background="@color/white"
                    android:layout_margin="5dp"
                    android:visibility="gone"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="0.8"
                    android:weightSum="10">
                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:text="Total "
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:padding="10dp"/>

                    <TextView
                        android:id="@+id/txtx_osp_total"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:hint="Rs.    "
                        android:text=""
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:gravity="right"/>
                </LinearLayout>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:orientation="horizontal"
                                android:layout_weight="0.8"
                                android:background="@color/white"
                                android:weightSum="10">
                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5"
                                    android:text="Shipping Charges "
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:padding="10dp"/>

                                <TextView
                                    android:id="@+id/txt_osp_shippingcharges"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5"
                                    android:hint="Rs.    "
                                    android:textSize="15dp"
                                    android:textColor="@color/black"
                                    android:padding="10dp"
                                    android:gravity="right"/>
                            </LinearLayout>



                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:orientation="horizontal"
                                android:layout_weight="0.8"
                                android:background="@color/light_grey"
                                android:weightSum="10">
                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5"
                                    android:text="Grand Total"
                                    android:textSize="15dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:padding="10dp"/>

                                <TextView
                                    android:id="@+id/txt_osp_grandtotal"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="5"
                                    android:hint=" - Rs.    "
                                    android:textSize="15dp"
                                    android:textColor="@color/black"
                                    android:padding="10dp"
                                    android:gravity="right"/>
                            </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2.5"
    android:weightSum="3"
    android:orientation="vertical"
    android:background="@drawable/grey_transperantbtn">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="5.5"
                    android:orientation="horizontal"

                   >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="Shipping To :"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="left|center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"/>

                    <TextView
                        android:id="@+id/txt_osp_shippingname"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.4"
                        android:text="Shipping Name"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:gravity="left|center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        />

                </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
       >

        <TextView

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Estimated delivery:"
            android:padding="5dp"
            android:background="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>

        <TextView
            android:id="@+id/txt_osp_estimateddelivery"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:text=""
            android:padding="5dp"
            android:background="@color/white"
            android:textSize="18dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/green"
            android:textStyle="bold"
            />

    </LinearLayout>

</LinearLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:text="Shipping Address"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:padding="5dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:weightSum="1"
                    android:orientation="vertical"
                    android:layout_weight="3">



                        <TextView
                            android:id="@+id/txt_osp_address"
                            android:background="@drawable/grey_transperantbtn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Address "
                            android:singleLine="true"
                            android:gravity="left"
                            android:padding="10dp"
                            android:textSize="15dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"/>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:background="@color/grey"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    />

                <Button
                    android:id="@+id/btn_osp_proceed"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_squarebtn_bg"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textAllCaps="false"
                    android:text="Proceed to Payment"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"/>


</LinearLayout>
