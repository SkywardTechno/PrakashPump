<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="10">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:layout_weight="9"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="6"
            android:layout_weight="0.9"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"/>

            <EditText
                android:id="@+id/add_customer_name"
                android:background="@drawable/grey_edittext_line"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5.1"
                android:hint="Name"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/user_sky"
                android:drawablePadding="10dp"
                android:singleLine="true"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:textSize="18dp"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/asterisk_symbol"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="6"
            android:layout_weight="0.9"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"/>

            <EditText
                android:id="@+id/add_customer_email"
                android:drawableLeft="@drawable/emailid"
                android:drawablePadding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5.1"
                android:hint="Emailid"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:background="@drawable/grey_edittext_line"

                android:textSize="18dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="6"
            android:layout_weight="0.9"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"/>

            <EditText
                android:id="@+id/add_customer_phn"
                android:background="@drawable/grey_edittext_line"
                android:drawableLeft="@drawable/phone"
                android:drawablePadding="10dp"
                android:layout_width="0dp"
                android:inputType="number"
                android:layout_height="match_parent"
                android:layout_weight="5.1"
                android:hint="Mobile No"
                android:textColor="@color/black"
                android:singleLine="true"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:textSize="18dp"/>

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/asterisk_symbol"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="6"
            android:layout_weight="0.9"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"/>



            <EditText
                android:id="@+id/add_customer_password"
                android:background="@drawable/grey_edittext_line"
                android:drawableLeft="@drawable/password_sky"
                android:drawablePadding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5.1"
                android:hint="Password"
                android:textColor="@color/black"
                android:singleLine="true"
                android:password="true"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:textSize="18dp"/>

            <ImageView
                android:layout_gravity="center_vertical"

                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/asterisk_symbol"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="6"
            android:layout_weight="0.9"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"/>


            <EditText
                android:drawableRight="@drawable/dropdown"

                android:id="@+id/add_customer_place"
                android:background="@drawable/grey_edittext_line"
                android:drawableLeft="@drawable/location"
                android:drawablePadding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5.1"
                android:hint="Country"
                android:editable="false"
                android:textColor="@color/black"
                android:singleLine="true"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:textSize="18dp"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="6"
            android:layout_weight="0.9"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"/>



            <EditText
                android:drawableRight="@drawable/dropdown"

                android:id="@+id/add_customer_farmno"
                android:background="@drawable/grey_edittext_line"
                android:drawableLeft="@drawable/plot"
                android:drawablePadding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5.1"
                android:hint="City"
                android:editable="false"
                android:textColor="@color/black"
                android:singleLine="true"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:textSize="18dp"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="6"
            android:layout_weight="0.9"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"/>



            <EditText
                android:drawableRight="@drawable/dropdown"

                android:id="@+id/add_customer_area"
                android:background="@drawable/grey_edittext_line"
                android:drawableLeft="@drawable/area"
                android:drawablePadding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5.1"
                android:hint="Area"
                android:editable="false"
                android:textColor="@color/black"
                android:singleLine="true"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:textSize="18dp"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="6"
            android:layout_weight="0.9"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"/>



            <EditText
                android:id="@+id/add_customer_usertype"
                android:background="@drawable/grey_edittext_line"
                android:drawableLeft="@drawable/type"
                android:drawablePadding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5.1"
                android:hint="Customer Type"
                android:textColor="@color/black"
                android:singleLine="true"
                android:drawableRight="@drawable/dropdown"
                android:gravity="left|center_vertical"
                android:padding="5dp"
                android:editable="false"
                android:textSize="18dp"/>

            <ImageView
                android:layout_gravity="center_vertical"

                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/asterisk_symbol"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="6"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/btn_addcustomer"
            style="@style/dark_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Add Customer"
            android:textAllCaps="false"
            android:textSize="18dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>
    </LinearLayout>

</LinearLayout>
